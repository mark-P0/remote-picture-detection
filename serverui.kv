ScreenManager:
    Display:
        name: 'scr2'

    OptionPanel:
        name: 'scr1'
    
    # Display:
    #     name: 'scr2'


<OptionPanel>:
    MDIconButton:
        pos_hint: {'right': 1, 'top': 1}
        icon: 'chevron-double-right'
        on_release:
            root.manager.transition.direction = 'left'
            root.manager.current = 'scr2'
    
    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint_x: 0.8
        padding: '12dp', 0

        adaptive_height: True
        md_bg_color: 0, 0, 0, 0.1

        OptionItem:
            label_text: 'Server address'
            label_theme: 'Hint'
            italicize: True
            MDLabel:
                text: '{}:{}'.format(*app.ip_address)
                halign: 'right'
                theme_text_color: 'Hint'
        
        MDSeparator:

        OptionItem:
            label_text: 'Toggle server'
            MDSwitch:
                active: app.server_is_live
                on_active:
                    app.toggle_server(status=self.active)


<OptionItem@MDBoxLayout>:
    label_text: ''
    label_theme: None
    italicize: False

    size_hint_y: None
    height: '48dp'
    padding: '24dp', 0

    MDLabel:
        text: root.label_text
        theme_text_color: root.label_theme if root.label_theme is not None else 'Primary'
        italic: root.italicize


<Display>:
    MDIconButton:
        pos_hint: {'top': 1}
        icon: 'chevron-double-left'
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = 'scr1'

    MDBoxLayout:
        orientation: 'horizontal'
        padding: '100dp', '150dp', '100dp', '100dp'

        MDBoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            md_bg_color: 1, 0, 0, 0.25

            AsyncImage:
                id: server
                source: root.server_image

            MDLabel:
                text: '*match pic*'
                halign: 'center'

        MDBoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            md_bg_color: 0, 0, 1, 0.25

            AsyncImage:
                id: client
                source: root.client_image
            
            MDLabel:
                # text: '*input pic*'
                text: root.received
                halign: 'center'



